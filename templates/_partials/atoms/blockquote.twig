  alignment: 'right',
  citation: null,
  class: null,
  text: ''
}|merge(params|default({})) %}

<blockquote class="quote{% if quoteParams.alignment != 'center' %} -{{ quoteParams.alignment }}{% endif %}">
  <p>
    {{ quoteParams.text }}
  </p>

  {% if quoteParams.citation %}
