<!doctype html>
<html class="no-js" lang="en-US" itemscope itemtype="http://schema.org/WebSite">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    {# TODO: Add SEOMatic code #}

    {# Mobile-friendly #}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="cleartype" content="on">

    {# Icons #}
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" title="favicon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/apple-touch-icon.png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180x180.png" />
    <meta name="msapplication-TileImage" content="/apple-touch-icon.png">
    <meta name="msapplication-TileColor" content="#ffffff">

    {# Typekit // Ben's account #}
    <script src="https://use.typekit.net/uul7pdt.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    {# JavaScript #}
    {# <script src="/assets/dist/scripts/lib/modernizr.js"></script> #}

    {# CSS #}
    {% if craft.config.devMode %}
      <link rel="stylesheet" href="/assets/dist/styles/main.css" id="stylesheet">

    {% else %}
      <link rel="stylesheet" href="/assets/dist/styles/main.min.css" id="stylesheet">

    {% endif %}
  </head>

  <body>
    {# Google Tag Manager #}
    {% if craft.config.trackAnalytics
      and not craft.request.isLivePreview
      and not currentUser
    %}
      {% include '_partials/global/gtm' %}
    {% endif %}

    {% if showHeader is defined and showHeader %}
      {% include '_partials/organisms/header' with { params: headerOptions|default({}) } %}
    {% endif %}

    <main class="main" id="main" role="main" tabindex="0">
      {% block content %}{% endblock %}
    </main>

    {% if showFooter is defined and showFooter %}
      {% include '_partials/organisms/footer' %}
    {% endif %}

    {# JavaScript #}
    {% if craft.config.devMode %}
      <script data-main="/assets/dist/scripts/main"
        src="/assets/vendor/requirejs/require.js">
      </script>
    {% else %}
      <script data-main="/assets/dist/scripts/main"
        src="/assets/vendor/requirejs/require.js">
      </script>
    {% endif %}
  </body>

</html>
